{
    "compilerOptions": {
        "module": "ESNext",
        "moduleResolution": "node",
        "target": "ES5",
        "baseUrl": "./",
        "paths": {
            "@/*": [
                "lib/*"
            ]
        }
    },
    "include": [
        "lib/**/*",
        "plugins",
        "rollup-plugin-copy.js"
    ],
    "exclude": [
        "node_modules",
        "test",
        "dist",
        "**/*spec.ts",
        "lib/strategies/vue/extra"
    ]
}